@model IEnumerable<ProdBuilder0920.Domain.Order>
@{
    ViewBag.Title = "SeeAllOrders";
}
<br/>
<br/>
<br/>

<h2 class="alert-info">All Orders in DB</h2>
<table class="col-md-12 table table-striped table-bordered table-hover">
    <tr>
        <th>ID</th>
        <th>OrderNr</th>
        <th>Sum</th>
        <th>Customer</th>
        <th>DeliveryDate</th>
        <th>Satus</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.OrderID</td>
            <td>@item.OrderNr</td>
            <td>@item.OrderlSum</td>
            <td>@item.UsernameCustomer</td>
            <td>@item.OrderDeliveryDate</td>
            <td>@item.OrderStatus</td>
            <td>@Html.ActionLink("Edit Orderstatus", "EditOrderStatus", "Admin",
               new { id = item.OrderID }, new { @class = "btn btn-primary delete" })</td>
        </tr>
    }
</table>