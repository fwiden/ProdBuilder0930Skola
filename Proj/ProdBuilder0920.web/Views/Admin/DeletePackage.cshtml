@model IEnumerable<ProdBuilder0920.Domain.Package>
@{
    ViewBag.Title = "DeletePackage";
}

<br/>
<br/>
<br/>
<h2>DeletePackage</h2>

<h2 class="alert-warning">Warning! All Parts And Parttypes in the Package will also be deleted!</h2>
<table class="col-md-6 table table-striped table-bordered table-hover" style="width: 600px">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>StartPrice</th>
        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PackageID</td>
            <td>@item.PackageName</td>
            <td>@item.PackageDescription</td>
            <td>@item.PackageStartPrice</td>

            <td>@Html.ActionLink("Delete Package", "DeletePackageIn", "Admin", new {id = item.PackageID},  new {@class = "btn btn-danger delete"})</td>
        </tr>
    }
</table>



