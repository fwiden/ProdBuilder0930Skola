@model List<ProdBuilder0920.Domain.Part>
@{
    ViewBag.Title = "UpdatePart";
}

<br/>
<br/>
<br/>
<h2>UpdatePart</h2>

<h2 class="alert-info">All Parts in DB</h2>

<table class="col-md-12 table table-striped table-bordered table-hover ">
    <tr>
        <th>Manufacturer</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Code</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PartManufacturer</td>
            <td>@item.PartModelName</td>
            <td>@item.PartDescription</td>
            <td>@item.PartPrice</td>
            <td>@item.PartProductionCode</td>
            <td>@Html.ActionLink("Update Part", "UpdatePartIn", "Admin", 
               new {id = item.PartID}, new {@class = "btn btn-primary delete"})</td>
        </tr>
    }
</table>

